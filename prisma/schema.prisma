generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int      @id @default(autoincrement())
  password String
  email    String   @unique
  is_admin Boolean? @default(false)
}

model player_career_info {
  id_joueur       Int    @id
  nom_joueur      String @db.VarChar(100)
  annee_naissance Int?
  prem_saison     Int
  dern_saison     Int
}

model player_par_match {
  saison             Int
  id_joueur          Int
  abr_equipe         String @db.VarChar(3)
  annee_naissance    Int?
  rebond             Int?
  points             Int?
  passe              Int?
  interception       Int?
  contre             Int?
  pourcent_fg        Float?
  pourcent_ft        Float?
  pourcent_trois_pts Float?
  pourcent_efg       Float?

  @@id([saison, id_joueur, abr_equipe])
}
